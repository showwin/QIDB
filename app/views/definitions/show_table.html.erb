<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-search">
      <thead>
        <tr>
          <th>指標番号</th>
          <th>Index</th>
          <th>指標群</th>
          <th>名称</th>
          <th>分母</th>
          <th>分子</th>
        </tr>
      </thead>
      <tbody>
        <% if @definitions.present? %>
          <% @definitions.each do |d| %>
            <tr>
              <td><%= d.numbers.values.join(', ') %></td>
              <td><%= d.index %></td>
              <td><%= d.group %></td>
              <td><%= link_to d.name, definition_path(d) %></td>
              <td><%= d.def_summary['denom'] %></td>
              <td><%= d.def_summary['numer'] %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
